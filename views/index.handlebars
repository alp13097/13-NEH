<div class="container">
    <div class="jumbotron text-center">
        <img src="/assets/img/Hamburger.png" alt="Picture of burger">
        <br>
        <h1>Eat-Da-Burger!</h1>
    </div>
</div>


<div class="container">
    <div class="row burger-lists">
        <div class="col-lg-6">
            <div class="card undevoured-list">
                <div class="card-header text-center">
                    <h2>Not Yet Devoured</h2>
                </div>
                <div class="card-body">
                    <ul class="list-content" id="not-d-list">
                        {{#each burgers}}
                        {{#unless devoured}}
                        {{> burgers/burger-block devour=true}}
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>


        <div class="col-lg-6">
            <div class="card devoured-list">
                <div class="card-header text-center">
                    <h2>Already Devoured!</h2>
                </div>
                <div class="card-body">
                    <ul id="d-list" class="list-content">
                        {{#each burgers}}
                        {{#if devoured}}
                        {{> burgers/burger-block devour=false}}
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<br>


<div class="container inputBox">
    <form class ="create-form">
        <div class="form-group">
            <div class="input-group mb-3">
                <input type="text" name="burger_name" id="br" class="form-control">
                <div class="input-group-append">
                    <button type="submit" class="add-burger-btn btn btn-sm btn-primary btn-danger">Submit</button>
                </div>
            </div>
        </div>
    </form>
    <h6 class="text-center">Enter a burger you want to eat and click the "Submit" button.</h6>
</div>
<br>